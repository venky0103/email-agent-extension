{
  "manifest_version": 3,
  "name": "FlexiEmail",
  "version": "1.0",
  "description": "A Chrome extension for managing emails efficiently.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
